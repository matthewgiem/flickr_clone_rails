<h2>add photo form</h2>

<% if @image.errors.any? %>
  <h3>Oops. There were some errors. Please try again:</h3>
  <ul>
    <% @image.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="form-group">
  <%= form_for @image do |f| %>
    <%= f.label :photo%>
    <%= f.file_field :photo %>
    <%= f.label :title%>
    <%= f.text_field :title, autofocus: true%>
    <%= f.label :user_name%>
    <%= f.text_field :user_name%>
    <%= f.submit "upload photo" %>
  <% end %>
</div>
